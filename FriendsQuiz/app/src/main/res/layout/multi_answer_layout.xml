<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multi_answer_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.friendsquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            style="@style/LogoStyle"
            android:src="@drawable/friendslogo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryLight">
        </View>

        <TextView
            android:id="@+id/multi_a_question_text_view"
            style="@style/QuestionStyle"
            android:text="@string/sample_question" />

        <CheckBox
            android:id="@+id/multi_a_answer1"
            style="@style/AnswerStyle"
            android:background="@color/answer1_background"
            android:text="@string/sample_answer1" />

        <CheckBox
            android:id="@+id/multi_a_answer2"
            style="@style/AnswerStyle"
            android:background="@color/answer2_background"
            android:text="@string/sample_answer2" />

        <CheckBox
            android:id="@+id/multi_a_answer3"
            style="@style/AnswerStyle"
            android:background="@color/answer3_background"
            android:text="@string/sample_answer3" />

        <CheckBox
            android:id="@+id/multi_a_answer4"
            android:background="@color/answer4_background"
            style="@style/AnswerStyle"
            android:text="@string/sample_answer4" />

        <Button
            android:onClick="goToNext"
            style="@style/ButtonStyle"
            android:text="@string/next_button"/>

    </LinearLayout>

</ScrollView>