<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/results_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.friendsquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            style="@style/ResultsLogoStyle"
            android:src="@drawable/friends_results_logo" />

        <TextView
            style="@style/ResultsHeaderStyle"
            android:text="@string/results_header" />

        <TextView
            android:id="@+id/points_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points"
            style="@style/pointStyle"/>

    </LinearLayout>

</ScrollView>