<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_answer_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.friendsquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/LogoStyle"
            android:src="@drawable/friendslogo"/>

        <TextView
            android:id="@+id/text_a_question"
            style="@style/QuestionStyle"
            android:text="@string/basic_question" />

        <EditText
            android:id="@+id/text_a_answer"
            style="@style/InputFieldStyle"
            android:hint="@string/answer_hint"/>

        <Button
            style="@style/ButtonStyle"
            android:text="@string/next_button"
            android:onClick="goToNext"/>

    </LinearLayout>

</ScrollView>