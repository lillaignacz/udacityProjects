<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_answer_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.friendsquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/LogoStyle"
            android:src="@drawable/friendslogo"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryLight">
        </View>

        <TextView
            android:id="@+id/single_a_question"
            style="@style/QuestionStyle"
            android:text="@string/sample_question"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/single_a_answer1"
                style="@style/AnswerStyle"
                android:background="@color/answer1_background"
                android:text="@string/sample_answer1"/>

            <RadioButton
                android:id="@+id/single_a_answer2"
                style="@style/AnswerStyle"
                android:background="@color/answer2_background"
                android:text="@string/sample_answer2"/>

            <RadioButton
                android:id="@+id/single_a_answer3"
                style="@style/AnswerStyle"
                android:background="@color/answer3_background"
                android:text="@string/sample_answer3"/>

            <RadioButton
                android:id="@+id/single_a_answer4"
                style="@style/AnswerStyle"
                android:background="@color/answer4_background"
                android:text="@string/sample_answer4"/>

            <Button
                android:id="@+id/next_button"
                android:onClick="goToNext"
                style="@style/ButtonStyle"
                android:text="@string/next_button"
                />

        </RadioGroup>

    </LinearLayout>

</ScrollView>
